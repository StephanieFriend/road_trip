<h1><%= @trip.title %></h1>

<p><%= @trip.destination_city %></p>
<p><%= @trip.mileage %></p>

<h2>Travelers</h2>

<ul>
<% @trip.travelers.each do |traveler| %>
    <li>
    <section id="traveler-<%= traveler.id %>">
      <%= traveler.name %>
      <%= button_to 'Remove Traveler', "/trips/#{@trip.id}/#{traveler.id}", method: :delete %>
    </section>
    </li>
<% end %>
</ul>

<h3>Other Trips to this Destination</h3>

<% @trips.each do |same_trip| %>
  <% if @trip.destination_city == same_trip.destination_city %>
    <% if @trip.title != same_trip.title %>
      <p><%= link_to "#{same_trip.title}", "/trips/#{same_trip.id}" %></p>
    <% end %>
  <% end %>
<% end %>